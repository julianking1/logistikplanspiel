                    th(scope="colgroup" colspan="4") schwarz
                    th(scope="colgroup" colspan="4") weiß
                    th(scope="colgroup" colspan="4") rot
                tr
                    th Nr.
                    th Menge
                    th Plan-Takt
                    th Ist-Takt
                    th Nr.
                    th Menge
                    th Plan-Takt
                    th Ist-Takt
                    th Nr.
                    th Menge
                    th Plan-Takt
                    th Ist-Takt


