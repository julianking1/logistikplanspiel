                each item in versuch
                    tr
                        td= item.takt
                        td= item.Nrs
                        td= item.Menges
                        td= item.Plans
                        td= item.Ists
                        td= item.Nrw
                        td= item.Mengew
                        td= item.Planw
                        td= item.Istw
                        td= item.Nrr
                        td= item.Menger
                        td= item.Planr
                        td= item.Istr


